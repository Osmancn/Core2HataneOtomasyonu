@model KayitOlViewModel
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>
    <script>
        $(function () {
            $("input.input-validation-error")
                .closest(".form-group")
                .addClass("has-danger");
        });
    </script>
}
<div class="container">
    <h2>Hasta Kayit</h2>
    <hr />
    <div class="row">
        <div class="col">
            <form asp-action="KayitOl" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Tc">Tc Kimlik No</label>
                    <input asp-for="Tc" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Parola">Parola</label>
                    <input asp-for="Parola" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ReParola">Parola Tekrar</label>
                    <input asp-for="ReParola" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Ad">Ad</label>
                    <input asp-for="Ad" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Soyad">Soyad</label>
                    <input asp-for="Soyad" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
               
                <div class="custom-radio form-group">
                    <input asp-for="Cinsiyet"/>
                    <Label asp-for="Cinsiyet" class="form-check-label">Erkekmi</Label>
                </div>
                <button type="submit" class="btn btn-primary">Kayit Ol</button>
                <a class="btn btn-warning" asp-action="Giris">Hesabım Var</a>
            </form>
        </div>
    </div>
</div>


