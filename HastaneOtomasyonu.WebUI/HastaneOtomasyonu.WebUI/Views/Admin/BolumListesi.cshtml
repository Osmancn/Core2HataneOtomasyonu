@model IEnumerable<Bolum>
@{
    ViewData["Title"] = "BolumListesi";
}

<div class="container mt-3">
    <h2>Bölüm Listesi</h2>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">

                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Bolum Adı</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.BolumId</th>
                                <th>@item.BolumAdi</th>
                                <th>
                                    <a class="btn btn-primary btn-sm" asp-action="DoktorListesi" asp-route-id="@item.BolumId">
                                        Doktorlar
                                    </a>
                                    <a class="btn btn-warning btn-sm" asp-action="BolumDuzenle" asp-route-id="@item.BolumId">
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-action="BolumSil" asp-route-id="@item.BolumId">
                                        Sil
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>

                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Bölüm Bulunamadı
                </div>
            }

        </div>
    </div>
    <a class="btn btn-success" asp-action="BolumEkle">Bolum Ekle</a>
</div>

