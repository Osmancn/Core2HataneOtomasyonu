@model IEnumerable<Doktor>
@{
    ViewData["Title"] = "Doktor Listesi";
}

<div class="container mt-3">
    <h2>Doktor Listesi</h2>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">

                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Doktor Adı</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.DoktorId</th>
                                <th>@item.Ad @item.Soyad </th>
                                <th>@item.Email</th>
                                <th> 
                                    <a class="btn btn-warning btn-sm" asp-action="DoktorDuzenle" asp-route-id="@item.DoktorId">
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-action="DoktorSil" asp-route-id="@item.DoktorId">
                                        Sil
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>

                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Bölüm Bulunamadı
                </div>
            }

        </div>
    </div>
    <a class="btn btn-success" asp-action="BolumEkle">Bolum Ekle</a>
</div>

